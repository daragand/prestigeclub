{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('gallery/css/bootstrap.min.css') }}">
	<link rel="stylesheet" href="{{ asset('gallery/css/bootstrap-select.min.css') }}">
	<link rel="stylesheet" href="{{ asset('gallery/css/magnific-popup.css') }}">
	<link rel="stylesheet" href="{{ asset('gallery/css/style.css') }}">


{% endblock %}
{% block body %}
{{ dump(panier) }}
 <div class="body_content">
    <!-- Blog Section -->
    
    <section class="pt40 pb0">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="main-title">
              <h2 class="title">Confirmez votre commande</h2>
              <p class="text mb-0">Renseignez votre adresse</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Shop Checkout Area -->
    <section class="shop-checkout pt-0">
      <div class="container">
        <div class="row wow fadeInUp" data-wow-delay="300ms">
          <div class="col-md-7 col-lg-8">
            <div class="checkout_form">
              <h4 class="title mb30">Récapitulatif de votre commande</h4>
              <div class="checkout_coupon">
                <form class="form2" id="coupon_form" name="contact_form" method="post">
                  <div class="row">
                    <div class="col-sm-6">
                      <div class="mb25">
                        <h6 class="mb15">{{app.user.firstname}}</h6>
                        <input class="form-control" type="text" placeholder="Ali">
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="mb25">
                        <h6 class="mb15">{{app.user.lastname}}</h6>
                        <input class="form-control" type="text" placeholder="Tufan">
                      </div>
                    </div>
                    <div class="col-sm-12">
                      <div class="mb25">
                        <h6 class="mb15">Company Name</h6>
                        <input class="form-control" type="text" placeholder="Ali">
                      </div>
                    </div>
                    
                    
                   
                    
                    
                    <div class="col-sm-12">
                      <div class="mb25">
                        <h4 class="mb15" class="mb15">Additional information</h4>
                        <h6>Order Notes (optional)</h6>
                        <textarea name="form_message" class="" rows="7" placeholder="Description"></textarea>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <div class="col-md-5 col-lg-4">
            <div class="shop-sidebar ms-md-auto">
              <div class="order_sidebar_widget mb30 default-box-shadow1">
                <h4 class="title">Votre commande</h4>
                <ul class="p-0 mb-0">
                  <li class="bdrb1 mb20"><h6>Produits <span class="float-end">Subtotal</span></h6></li>
                 {% if panier.forfait is defined %}
                  
                  <li class="mb20"><p class="body-color">forfait {{panier.forfait.name}} <span class="float-end">{{panier.forfait.price|format_currency('EUR', {rounding_mode: 'floor'})}} </span></p></li>
                 {% endif %}
                  {% if panier.optionLists is defined %}
                    {% for itemOption in panier.optionLists %}
                      
                  <li class="mb20"><p class="body-color">{{itemOption}} <span class="float-end">{{itemOption.options.price|format_currency('EUR', {rounding_mode: 'floor'})}}</span></p></li>
                    {% endfor %}
                  {% endif %}
                 
              
                  <li><h6>Total <span class="float-end">{{panier.amount|format_currency('EUR', {rounding_mode: 'floor'})}}</span></h6></li>
                </ul>
              </div>
              <div class="payment_widget default-box-shadow1">
                <h4 class="title">Paiement</h4>
                <div class="radio-element">
                  
                  <div class="pw-details">
                    <p class="fz13 mb30">En passant commande, vous acceptez les <a href="#">Conditions générales de vente de Prestige Club</a>. Veuillez consulter notre charte de protection de vos données personnelles.</p>
                  </div>
                  
                  {# <div class="form-check d-flex align-items-center">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault4">
                    <label class="form-check-label" for="flexRadioDefault4">Par Carte Bleue</label>
                  </div> #}
                </div>
              </div>
              <div class="d-grid default-box-shadow2">
              
                <a class="ud-btn btn-thm" href="{{ path('app_payment',{'id':panier.id})}}">Payer<i class="fa-solid fa-credit-card"></i></a>
              
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    
  </div>

{% endblock %}
