{% extends 'base.html.twig' %}

{% block body %}
   <div
		class="body_content">
		<!-- Error/404 Section Area -->
		<section class="our-error">
			<div class="container">
				<div class="row align-items-center">
					<div class="col-xl-6 wow fadeInRight" data-wow-delay="300ms">
						<div class="animate_content text-center text-xl-start">
							<div class="animate_thumb">
								<img class="w-100" src="{{ asset('images/icon/error-page-img.svg')}}" alt="error-page-img">
							</div>
						</div>
					</div>
					<div class="col-xl-5 offset-xl-1 wow fadeInLeft" data-wow-delay="300ms">
						<div class="error_page_content text-center text-xl-start">
							<div class="erro_code">40<span class="text-thm">3</span>
							</div>
							<div class="h2 error_title">Oops!  Vous n'avez pas les accréditations</div>
							<p class="text fz15 mb20">Vous n'avez pas l'autorisation d'accéder au service dont les droits sont restreints.
								</p>
                                {% if ( is_granted('ROLE_PARENT') ) %}
                                    
							<a href="{{path('app_photos_index')}}" class="ud-btn btn-thm">Retour en page d'accueil<i class="fal fa-arrow-right-long"></i>
                                {% elseif ( is_granted('ROLE_PARENT') ) %}
							<a href="{{path('admin')}}" class="ud-btn btn-thm">Retour en page d'accueil<i class="fal fa-arrow-right-long"></i>
                                {% endif %}
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
{% endblock %}