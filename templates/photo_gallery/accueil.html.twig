{% extends 'base.html.twig' %}
{% block body %}
    <h1>Créer un nouveau produit</h1>
    {{ dump(licencies) }}

    <div class="container">
		<div class="row">
			{# colonne du milieu #}
			<section class="col-lg-12 float-md-end">
				
			
					<article>
						<div class="">
							<div class="row">
								{% for licencie in licencies %}
                                    {{ dump(licencie) }}
                                    
                                    {% for item in licencie.club %}
                                    <p>club</p>
                                        {{ dump(item) }}
                                    {% endfor %}
                                    
									
										<div class="col-lg-3 col-md-6">
											<div
												class="card h-100 mx-auto">
												{#  récupération de la première photo mais sous condition de présence d'image.
																																																							                        Si l'image est absente, on récupère l'image par défaut #}
												{% if licencie['photos'][0] is defined %}

													<img class="card-img-top img-fluid " src={{ vich_uploader_asset(licencie['photos'][0]) }} alt={{ licencie['photos'][0].path }}>

													{% else %}
													<img class="card-img-top img-fluid " src="https://via.placeholder.com/640x480.png/00bb99?text=imageDefaut" alt={{ licencie['licencie'].firstname }}>
												{% endif %}
												<div class="card-body flex-grow-1">
													<h2 class="card-title ">{{ licencie['licencie'].firstname }} {{ licencie['licencie'].lastname }}</h2>
													</h2>
                                                    {% for club in licencie.club %}
                                                        {{ dump(club) }}
													<h6>
														<i class="bi bi-people-fill"></i>
														{{ club.name }}
														-
														<i class="bi bi-tag-fill"></i>
														
														</h6>
                                                    {% endfor %}
													{# La description est réduite en affichage #}
													<p class="card-text">à voir ce que je place là</p>
													{# espace pour les équipements de la salle et les ergonomies #}
													<div class="row">
														<div class="col-md-8 p-4">
															<h4 class="title">Club</h4>
															<ul class="list-unstyled">
																
																	<li class="media d-flex align-items-start">
																		{% if licencie %}

																			<img class="d-flex me-3" src="https://via.placeholder.com/60" width="60" alt="alternance">
																		{% else %}
																			<img class="d-flex me-3" src="https://via.placeholder.com/60" alt="icon par défault">
																		{% endif %}
																		<div class="media-body">
																			<h5 class="mt-0 mb-1">nom du club</h5>
																		</div>
																	</li>
																


															</ul>

															
														</div>
													</div>
												</div>

												<a href="{{ path('app_photo_gallery') }}" class="btn btn-primary">Voir la salle

												</a>

											</div>
										</div>

									
								{% endfor %}
							</div>
						</div>
					</article>
				
			</section>

			{# fermeture container et row #}
		</div>
	</div>
{% endblock %}
