											<a class="popup-img" href="{{ vich_uploader_asset(phGroup, 'photoGroupFile')|imagine_filter('watermark') }}"><img class="wa" src="{{ vich_uploader_asset(phGroup, 'photoGroupFile')|imagine_filter('scale_photo') }}" alt=""></a>
